<p style="color: green"><%= notice %></p> <!-- Display any notice message in green -->

<%= render @student %> <!-- Render the details of the student -->

<div>
  <!-- Check if the student has a profile picture attached -->
  <% if @student.profile_picture.attached? %>
    <%= image_tag @student.profile_picture.variant(resize_to_fill: [200, 200]), alt: "Profile Picture" %> <!-- Display the student's profile picture, resized to 200x200 -->
  <% else %>
    <%= image_tag asset_path('default_profile_picture.png'), size: "200x200", alt: "Default Profile Picture" %> <!-- Display a default profile picture if none is attached -->
  <% end %>

  <%= link_to "Edit this student", edit_student_path(@student) %> | <!-- Link to edit the student's details -->
  <%= link_to "Back to students", students_path %> <!-- Link to go back to the students list -->

  <%= button_to "Destroy this student", @student, method: :delete %> <!-- Button to delete the student, sending a DELETE request -->
</div>