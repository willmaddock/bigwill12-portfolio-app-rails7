<%= form_with(url: students_path, method: :get, local: true, class: "mb-3") do |form| %>
  <div class="input-group">
    <div class="input-group-text">
      <%= form.label :major, "Select Major", class: "form-label mb-0" %>
    </div>
    <%= form.select :major, options_for_select(Student::VALID_MAJORS), { prompt: "Any Major" }, name: 'search[major]', class: "form-select" %>
    <button type="submit" class="btn btn-primary">Search</button> <!-- Submit button to initiate the search -->
  </div>
<% end %>

<!-- Separate Show All button as a link -->
<div class="mt-3">
  <%= link_to "Show All", students_path(show_all: true), class: "btn btn-secondary" %> <!-- Link to show all students -->
</div>

<!-- Display instruction under the Show All button -->
<div class="mt-2">
  <p>Please enter search criteria to find students.</p> <!-- Instructional text -->
</div>