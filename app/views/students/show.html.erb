<p style="color: green"><%= notice %></p> <!-- Display any notice message in green -->

<%= render @student %> <!-- Render the details of the student -->

<div class="mt-4">
  <!-- Check if the student has a profile picture attached -->
  <% if @student.profile_picture.attached? %>
    <%= image_tag @student.profile_picture.variant(resize_to_fill: [200, 200]), alt: "Profile Picture", class: "img-thumbnail" %> <!-- Display the student's profile picture, resized to 200x200 -->
  <% else %>
    <%= image_tag asset_path('default_profile_picture.png'), size: "200x200", alt: "Default Profile Picture", class: "img-thumbnail" %> <!-- Display a default profile picture if none is attached -->
  <% end %>

  <div class="mt-3">
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning", data: { toggle: 'tooltip', placement: 'top', title: 'Edit student details' } %> |
    <%= link_to "Back to students", students_path, class: "btn btn-secondary", data: { toggle: 'tooltip', placement: 'top', title: 'Go back to students list' } %>

    <%= button_to "Destroy this student", @student, method: :delete, data: { confirm: "Are you sure you want to delete this student?", toggle: 'tooltip', placement: 'top', title: 'Delete student' }, class: "btn btn-danger" %> <!-- Button to delete the student -->
  </div>
</div>